<div id ="event">
    <h4>Liked Events</h4>
    {{#each events}}
    <div class="row feedcont">
        <div class = "col s12">
            <form action="/api/userdislikes/{{this.liketitle}}" method="POST">
            <div class="row">
                <div class="col s2 title">
                    <h5>Title:</h5>
                    <h6 id="likeTitle" name="likeTitle">{{this.liketitle}}</h6>
                </div>
                <div class="col s2"></div>
                <div class="col s6 descCol">
                    <h5>Description:</h5>
                    <div id = "desccont">
                        <h6 id="likeDescription" name="likeDescription">{{this.likedesc}}</h6>
                     </div>
                    <h5>Start Date:</h5>
                    <h6 id="likeStartdate" name="likeStartdate">{{this.likestartdate}}</h6>
                    <h5>End Date:</h5>
                    <h6 id="likeEnddate" name="likeEnddate">{{this.likeenddate}}</h6>
                </div>
            </div>
            <div class="row">
                <div class="col s2"></div>
                <div class="col s2 locCont">   
                    <h5>Location:</h5>
                    <h6 id="likeLocation" name="likeLocation"> {{this.likelocation}}</h6>
                </div>
                <div class = "col s2"></div>
                <div class = "col s6">
                    <div class="googleMap">
                        <a href="//maps.google.com/?q={{this.likelocation}}" target="_blank" data-ga-label="Full Map Link" itemprop="map">
                        <img src="//maps.googleapis.com/maps/api/staticmap?zoom=13&amp;size=314x300&amp;maptype=roadmap&amp;markers=color:red%7Ccolor:red%7C{{this.likelocation}}&amp;key=AIzaSyBZyI2NwL198_2YM1ZBlZ3FdDb6JcOnUPI&amp;sensor=false" alt="{{venue_address}} {{city_name}} {{region_abbr}} {{postal_code}}">
                        <p>Full Map and Directions</p></a>
                    </div>
                </div>
            </div> <!-- end row-->
            <div class = "row">
                <div class = "col s5"></div>
                <div class = "col s2">
                    <div class = "remove">
                        <button class="btn waves-effect waves-light" type="submit">Remove Liked Event</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
        <br>
    </div>
    <br>
    {{/each}}
</div>

{{!-- Container for the Sign Up form. --}}
<div id="modal1" class="signup modal" startingTop="10%" dismissible>
  <div class="modal-content">
    <h4>Sign Up</h4>
    <form action="/api/users" method="POST">
      <h5 class="text--centered">Casus connects you to relevant events
      <b>streamlined and customized</b> in a seamless experience.</br>Connect with Casus</h5>
      <input type="email" placeholder="Email" id="Email" name="Email" class="input input--top" required />
      <br>
      <input type="password" placeholder="Password" id="Password" name="Password" class="input" required />
      <br>  
      <input type="text" placeholder="Zipcode" id="Zipcode" name="Zipcode" class="input" required />
      <br>
      <input type="text" placeholder="Twitter" id="Twitter" name="Twitter" class="input"/>
      <br>
      <select required name="userCategory" >
        <option disabled="disabled" selected="selected">Category</option>
        <option value="Music">Music</option>
        <option value="Visual Arts">Visual Arts</option>
        <option value="Performing Arts">Performing Arts</option>
        <option value="Film">Film</option>
        <option value="Lectures & Books">Lectures and Books</option>
        <option value="Fashion">Fashion</option>
        <option value="Food & Drink">Food and Drink</option>
        <option value="Festivals and Fairs">Festivals and Fairs</option>
        <option value="Charities">Charities</option>
        <option value="Sports and Active Life">Sports and Active Life</option>
        <option value="Nightlife">Nightlife</option>
        <option value="Kids and Family">Kids and Family</option>
        <option value="Other">Other</option>
      </select>
      <br>  
      <input type="text" placeholder="Tag" id="Tag" name="Tag" class="input"/>
      <br> 
      <input type="submit" value="Sign up" class="input input--submit" />
      <br>
      <label class="text text--omega text--centered">
        <b>{{error}}</b>
      </label>
    </form>
  </div> 
</div>

